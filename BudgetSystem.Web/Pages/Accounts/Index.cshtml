@page
@model BudgetSystem.Web.Pages.Accounts.IndexModel
@{
    ViewData["Title"] = "Accounts";
}

<div class="container py-3">
  <div class="card shadow-sm border-0">
    <div class="card-header d-flex justify-content-between align-items-center bg-white">
      <h1 class="h5 mb-0">Accounts</h1>
      <a class="btn btn-primary btn-sm" asp-page="Create">Create Account</a>
    </div>

    @if (Model.Accounts is null || !Model.Accounts.Any())
    {
        <div class="card-body text-center text-muted py-5">
            <p class="mb-1 fw-semibold">No accounts yet</p>
            <p class="mb-3">Create your first account to get started.</p>
            <a class="btn btn-outline-primary btn-sm" asp-page="Create">Create Account</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
          <table class="table table-hover table-sm align-middle mb-0">
            <thead class="table-light sticky-head">
              <tr>
                <th style="width: 80px;">ID</th>
                <th>Name</th>
                <th class="text-end" style="width: 160px;">Starting Balance</th>
                <th style="width: 120px;">Currency</th>
                <th style="width: 210px;">Created</th>
              </tr>
            </thead>
            <tbody>
            @foreach (var a in Model.Accounts)
            {
                <tr>
                    <td class="text-muted">@a.Id</td>
                    <td class="fw-semibold">@a.Name</td>
                    <td class="text-end font-monospace">@($"{a.StartingBalance:N2}")</td>
                    <td>
                        <span class="badge text-bg-secondary">@a.Currency</span>
                    </td>
                    <td>
                        @{
                            var local = a.CreatedUtc.ToLocalTime();
                        }
                        <time title="@local.ToString("yyyy-MM-dd HH:mm:ss")" class="text-nowrap">
                            @local.ToString("MMM d, yyyy Â· h:mm tt")
                        </time>
                    </td>
                </tr>
            }
            </tbody>
          </table>
        </div>
    }
  </div>
</div>
